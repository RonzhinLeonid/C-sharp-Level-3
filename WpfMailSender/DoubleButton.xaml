<UserControl x:Class="WpfMailSender.DoubleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfMailSender"
             mc:Ignorable="d" x:Name="root">
    <DockPanel>
        <Button x:Name="btnPrev" DockPanel.Dock="Right" Click="btnPrev_Click">Prev</Button>
        <Button x:Name="btnNwxt" DockPanel.Dock="Right" Click="btnNwxt_Click">Next</Button>
    </DockPanel>
</UserControl>
